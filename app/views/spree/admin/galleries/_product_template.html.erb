<script type="text/template" id="gallery_product_template">
  <li id="product_{{ product.id }}" data-product-id="{{ product.id }}" class="product">
    <a class="sort-handle js-sort-handle"><span class="icon icon-move"></span></a>
    <div class="btn-group">
      <a href="javascript:;"
         title="<%= t('spree_gallery.delete_from_gallery') %>"
         class="btn btn-default btn-sm delete-product js-delete-product"
         data-route="<%= remove_api_v1_gallery_items_path %>">
        <span class="icon icon-delete"></span>
      </a>
    </div>
    <div class="image">
        {{#if product.image}}
      <img src="{{ product.image }}" alt="{{ product.name }}" class="thumbnail" />
        {{else}}
      <img src="<%= image_path('noimage/medium.png') %>" alt="{{ product.name }}" class="thumbnail" />
        {{/if}}
    </div>
    <div class="product-info">
      <div class="name">{{ product.name }}</div>
    </div>
  </li>
</script>